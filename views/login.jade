
extends layout


block content
    .container
        h1 Login de Usuario
        if error
            .alert.alert-danger(role="alert")
                div #{error}
        form(method="post", id="loginForm")
            .form-group
                label Username
                input.span3(id="username", type="text", name="username", placeholder="Enter your username")
            .form-group
                label Password
                input.span3(id="password", type="password", name="password")
            .form-group
                input.btn(type="submit", value="Log In")